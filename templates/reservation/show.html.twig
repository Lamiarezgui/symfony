{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date_r</th>
                <td>{{ reservation.dateR ? reservation.dateR|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reservation.etat }}</td>
            </tr>
            <tr>
            <th>Client</th>
            <td>{{reservation.idCli.nom}}</td>
            </tr>
            <tr>
            <th>Mail Client</th>
            <td>{{reservation.idCli.mail}}</td>
            </tr>
             <tr>
            <th>Service</th>
            <td>{{reservation.idService.libelle}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}"><i class='fas fa-undo'></i></a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"><i class='fas fa-edit'> </i></a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
