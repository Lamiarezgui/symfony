{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}
<h1>Inscription sur le site</h1>
{{ form_start(form) }}
<div class="form-group">
<div class="col">
{{ form_row(form.email, { 'attr': { 'placeholder': 'Adresse email...' } } ) }}</div>
<div class="col">
{{ form_row(form.username, { 'label':'Nom d\'utilisateur', 'attr': {'placeholder'
:'Nom d\'utilisateur...' } }) }}</div>
<div class="col">
{{ form_row(form.password, { 'label':'Mot de passe', 'attr': {'placeholder':'Mot
de passe...' } }) }}</div>
<div class="col">
{{ form_row(form.confirm_password, { 
 'attr':{'placeholder':'Répétez votre mot de
passe...' } }) }}</div>
</div>

 <button type="submit" class="btn btn-success">Inscription</button>
 
{{ form_end(form) }}
{% endblock %}
