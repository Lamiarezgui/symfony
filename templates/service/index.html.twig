{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.libelle }}</td>
                <td>{{ service.description }}</td>
                <td>
                    <a href="{{ path('service_show', {'id': service.id}) }}"> <i class="fa fa-plus-square"> </i></a>
                    {% if app.user %}
                    <a href="{{ path('service_edit', {'id': service.id}) }}">  <i class='fas fa-edit'> </i></a>
                     {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  {% if app.user %}
    <a href="{{ path('service_new') }}"><i class='fas fa-pen-alt'></i> Create new</a>
    {% endif %}
{% endblock %}
