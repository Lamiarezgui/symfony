{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ client.mail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}"><i class='fas fa-undo'></i></a>

    <a href="{{ path('client_edit', {'id': client.id}) }}"><i class='fas fa-edit'> </i></a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
